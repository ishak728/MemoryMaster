<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F64FFDA"
    tools:context=".LevelTwoActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:text="Voice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gamerOneLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/timeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView">

        <TextView
            android:id="@+id/gamerOneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Gamer 1"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="38dp" />

        <TextView
            android:id="@+id/gamerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="180dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gamerTwoLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/timeTextView"
        app:layout_constraintTop_toTopOf="@+id/gamerOneLinearLayout">

        <TextView
            android:id="@+id/gamerTwoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Gamer 2"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="254dp" />

        <TextView
            android:id="@+id/gamerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="0"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="468dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="332dp"
        android:layout_height="320dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="91dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:background="@drawable/backgroundimg"
            android:onClick="textViewClicked"
            android:scaleType="centerCrop"
            android:text=" "
            android:textSize="1dp"

            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:background="@drawable/backgroundimg"
            android:onClick="textViewClicked"
            android:scaleType="centerCrop"
            android:text=" "
            android:textSize="1dp"

            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:background="@drawable/backgroundimg"
            android:onClick="textViewClicked"
            android:scaleType="centerCrop"
            android:text=" "
            android:textSize="1dp"

            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:background="@drawable/backgroundimg"
            android:onClick="textViewClicked"
            android:scaleType="centerCrop"
            android:text=" "
            android:textSize="1dp"

            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="228dp" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>